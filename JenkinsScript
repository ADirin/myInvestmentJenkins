pipeline {
  agent any 

  stages {
      stage ('Check OUT') {
        steps {
            git branch: 'master', credentialsId: 'ADirin', url:  'https://github.com/ADirin/myInvestmentJenkins.git'
         
        }

      }
     stage ('Build') {
        steps {
           bat 'mvn clean install'
        }

      }

    stage ('Test') {
        steps {
         echo 'mvn test '
        }
        post {
          success {
            junit '**/target/surefire-reports/Test-'.xml'
            jacoco(ExecPattern: '**/target/jacoco.exec')
          }
        }

      }
  }


}
